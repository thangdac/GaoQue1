@model GaoQue.ViewModels.AddRoleViewModel

@{
    ViewData["Title"] = "Add Roles";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Roles</h2>

<div class="container">
    <div class="card">
        <div class="card-body  text-center">
            <div class="col-md-6">
                <form asp-action="AddRoles" method="post" class="text-center">
                    <div class="form-group">
                        <label asp-for="RoleName" class="font-weight-bold">Select Role</label>
                        <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(Model.Roles))">
                            <option value="">Select a role</option>
                        </select>
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="UserId" />
                    <button type="submit" class="btn btn-primary">Add Role</button>
                </form>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
